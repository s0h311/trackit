{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "lib": ["Dom", "ES2022", "Dom.Iterable"],
    "paths": {
      "@lib/*": ["./lib/*"]
    }
  }
}
